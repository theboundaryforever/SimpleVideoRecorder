<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/darker_gray"/>
            <corners android:radius="10dp" />
            <stroke android:width="2dp" android:color="#444444" />
        </shape>
    </item>
    <item android:state_pressed="true"><shape>
            <corners android:radius="10dp" />

            <gradient android:angle="90" android:endColor="@color/color_tab_normal" 
                android:startColor="@color/color_tab_selected" />

            <stroke android:width="1dp" android:color="@color/app_main_color" />
        </shape></item>
    <item ><shape>
            <corners android:radius="10dp" />

            <gradient android:angle="270" 
                android:endColor="@color/color_tab_normal" 
                android:startColor="@color/color_tab_selected" />

            <stroke android:width="0dp" android:color="@color/app_main_color" />
        </shape></item>

</selector>